def zart_command_{{ command }}(cli,runner):
    logging.info('zart {{ command }}')
    result = runner.invoke(cli, ['{{ command }}'])
    logging.info(result.exit_code)
    assert result.exit_code == 0, "exitcode: " + str(result.exit_code)
{% endfor %}
